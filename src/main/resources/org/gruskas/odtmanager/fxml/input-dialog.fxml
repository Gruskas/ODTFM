<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<StackPane fx:controller="org.gruskas.odtmanager.InputDialogController" prefHeight="135.0" prefWidth="214.0" styleClass="custom-pane" stylesheets="@../modal-style.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1">
    <children>
        <VBox alignment="CENTER" prefHeight="133.0" prefWidth="225.0" spacing="10.0">
            <children>
                <Label fx:id="label"/>
                <TextField fx:id="inputField" alignment="CENTER" maxHeight="400.0" maxWidth="800.0" promptText="Type here..." VBox.vgrow="ALWAYS" />
                <Button fx:id="confirmButton" text="Confirm" />
            </children>
            <padding>
                <Insets bottom="20" left="20" right="20" top="20" />
            </padding>
        </VBox>
    </children>
</StackPane>